{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "${relativeFile}",
                "-g",
                "-o",
                "${relativeFileDirname}/${fileBasenameNoExtension}",
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "C/C++: Run",
            "type": "shell",
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "command": "./${fileBasenameNoExtension}",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [ "C/C++: Build" ]
        },
        {
            "label": "C/C++: Build",
            "type": "shell",
            "command": "g++",     
            "args": [
                "${relativeFile}",
                "-o",
                "${relativeFileDirname}/${fileBasenameNoExtension}"
            ]
        }
    ]
}